@page "/stats"
@using tinyutils.Data
@using tinyutils.Services
@inject AuditService AuditService



<PageTitle>Statistics - tinyutils</PageTitle>
<div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Usage Statistics</h1>
    <p class="text-gray-600 mb-6">Recent tool usage</p>
    @if (logs == null)
    {
        <p class="text-gray-500">Loading...</p>
    }
    else if (!logs.Any())
    {
        <p class="text-gray-500">No usage data yet. Try using a tool!</p>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tool</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Input Size</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Output Size</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time (ms)</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var log in logs)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @log.Timestamp.ToLocalTime().ToString("g")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @log.ToolName
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @FormatBytes(log.InputSizeBytes)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @FormatBytes(log.OutputSizeBytes)
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @log.ProcessingTimeMs.ToString("F2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<AuditLog>? logs;
    protected override async Task OnInitializedAsync()
    {
        logs = await AuditService.GetRecentLogsAsync(50);
    }
    private string FormatBytes(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024):F1} MB";
    }
}